<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
  <%- include("../templates/header.ejs", {title : "آیفون استور", css : "homePage"}) %>
</head>
<body>
  <%- include("../templates/sideBar.ejs", {active : "users"}) %>
  <div id="check-container">
    <div style="display: flex; justify-content: space-between;">
      <h1>کاربران</h1>
      <a href="/users/new" class="btn">ساخت کاربر</a>
    </div>
    <% if (allUsers[0]) { %>
      <% allUsers.forEach(user => { %>
        <%- include("../templates/user.ejs", {user}) %>
      <% }) %>
    <% }else{ %>
      <div class="err">کاربری یافت نشد.</div>
    <% } %>
  </div>
</body>
</html>